<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarNewsfeedItem"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@color/blue" />

        <TextView
            android:id="@+id/textViewNewsfeedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/avatarNewsfeedItem"
            android:text="newsfeed"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewNewsfeedTimeCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNewsfeedTitle"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/avatarNewsfeedItem"
            android:text="time" />

        <TextView
            android:id="@+id/textViewNewsfeedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatarNewsfeedItem"
            android:layout_marginTop="5dp"
            android:text="123"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imageViewNewsfeedItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNewsfeedText"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>